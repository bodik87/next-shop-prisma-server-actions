model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?
  address  String?
  orders   Order[]
}

model Order {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  total     Float

  userEmail String
  user   User   @relation(fields: [userEmail], references: [email], onDelete: Cascade)
}
